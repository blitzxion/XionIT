@{
	ViewBag.Title = "Site Reports";
}

<div>
	<div class="row">

		<div class="col-md-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Create a Asset Report</h3>
				</div>
				<div class="panel-body">
					@using (Html.BeginForm(@"Asset", @"Reports", FormMethod.Get))
					{
						<div class="form-horizontal">
							<div class="form-group">
								<label class="control-label col-md-3" for="">Select a Asset</label>
								<div class="col-md-9">
									@Html.DropDownList(@"selectedAsset", (SelectList)ViewBag.Assets, "", new { @class = "form-control" })
								</div>
							</div>
							<div class="form-group">
								<div class="col-lg-9 col-lg-offset-3">
									<button type="submit" class="btn btn-primary">Create</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>

		<div class="col-md-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Create a Person Report</h3>
				</div>
				<div class="panel-body">
					@using (Html.BeginForm(@"Person", @"Reports", FormMethod.Get))
					{
						<div class="form-horizontal">
							<div class="form-group">
								<label class="control-label col-md-3" for="">Select a Person</label>
								<div class="col-md-9">
									@Html.DropDownList(@"selectedPerson", (SelectList)ViewBag.Users, "", new { @class = "form-control" })
								</div>
							</div>
							<div class="form-group">
								<div class="col-lg-9 col-lg-offset-3">
									<button type="submit" class="btn btn-primary">Create</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>

	</div>

	<hr/>

	<div class="row">

		<div class="col-md-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Common Reports</h3>
				</div>
				<div class="panel-body">
					<ul>
						<li><a href="@Url.Action("PeopleWithMostAssets")">People with the most assets</a></li>
						<li><a href="@Url.Action("PeopleWithoutAssets")">People without assets</a></li>
						<li><a href="@Url.Action("MostAssignedAssets")">Most assigned Assets</a></li>
						<li><a href="@Url.Action("AssetsNotAssigned")">Assets not assigned</a></li>
					</ul>
				</div>
			</div>
		</div>

	</div>

</div>

@section Styles {
	@Styles.Render("~/Content/select2")
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/plugins/select2")
	<script>
		(function () {
			$('select').select2();
		})();
	</script>
}

