@using XionIT.Models;
@model IList<ApplicationUser>

@{
	ViewBag.Title = "Top 5 People With The Most Assets";
}

<div class="visible-print-block">
	<h3>People</h3>
	<table class="table table-condensed">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Email</th>
				<th>Num Assets</th>
				<th>Created</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var person in Model)
			{
				<tr>
					<td>@person.Id</td>
					<td>@person.UserName</td>
					<td>@person.Email</td>
					<td>@person.Assets.Count()</td>
					<td>@person.Created.ToShortDateString()</td>
				</tr>
			}
		</tbody>
	</table>
</div>

<div class="hidden-print">

	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">People</h3>
		</div>
		<table class="table table-condensed">
			<thead>
				<tr>
					<th></th>
					<th>Id</th>
					<th>Name</th>
					<th>Email</th>
					<th>Num Assets</th>
					<th>Created</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var person in Model)
			{
					<tr>
						<td>
							<a href="@Url.Action("Person", "Reports", new { selectedPerson = person.Id })" title="View Report" target="_blank" class="hidden-print">
								<i class="glyphicon glyphicon-new-window"></i>
							</a>
						</td>
						<td>@person.Id</td>
						<td>@person.UserName</td>
						<td>@person.Email</td>
						<td>@person.Assets.Count()</td>
						<td>@person.Created.ToShortDateString()</td>
					</tr>
			}
			</tbody>
		</table>
	</div>

</div>

@section Styles {
	<style>
		@@media print {
			.printArea h4 {
				width: 100%;
				text-decoration: underline;
			}
		}
	</style>
}