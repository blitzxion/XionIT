@using XionIT.Models;
@model DeletePeopleViewModel

@{
	ViewBag.Title = "Are you sure you want to delete this?";
}
<div>
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Username)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Username)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.NumAssets)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.NumAssets)
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		@Html.HiddenFor(x => x.Id)

		<div class="checkbox">
			<label class="text-danger">
				@Html.CheckBoxFor(x => x.Delete) I understand that this is a irreversable action
			</label>
		</div>

		<div class="form-actions no-color">
			<a href="@Url.Action(@"index")" class="btn btn-default">Cancel</a>
			<input type="submit" value="Delete" class="btn btn-danger" />
		</div>
	}
</div>
