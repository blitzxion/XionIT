@{
    ViewBag.Title = "About Us";
}

<div class="row">
	
	<div class="text-center">
		<h3>Super simple asset managment.</h3>


		<h4>XionIT gives you the simplicity of managing your assets and users within your company.</h4>

		<br/>

		<div id="carousel-images" class="carousel slide" data-ride="carousel">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#carousel-images" data-slide-to="0" class="active"></li>
				<li data-target="#carousel-images" data-slide-to="1"></li>
				<li data-target="#carousel-images" data-slide-to="2"></li>
				<li data-target="#carousel-images" data-slide-to="3"></li>
				<li data-target="#carousel-images" data-slide-to="4"></li>
				<li data-target="#carousel-images" data-slide-to="5"></li>
			</ol>

			<!-- Wrapper for slides -->
			<div class="carousel-inner" role="listbox">
				<div class="item active">
					<img src="~/Content/images/dashboard.png" />
					<div class="carousel-caption">
						<h3>XionIT Dashboard</h3>
						<p>See your most recent assets and users at a glance. Includes some metrics.</p>
					</div>
				</div>
				<div class="item">
					<img src="~/Content/images/allPeople.png" />
					<div class="carousel-caption">
						<h3>All People</h3>
						<p>See all your users and their details at a glance and perform quick actions.</p>
					</div>
				</div>
				<div class="item">
					<img src="~/Content/images/userDetails.png" />
					<div class="carousel-caption">
						<h3>View User Details</h3>
						<p>See detailed information about each user and what assets are assigned to them.</p>
					</div>
				</div>
				<div class="item">
					<img src="~/Content/images/editUser.png" />
					<div class="carousel-caption">
						<h3>Edit User Details</h3>
						<p>Edit users and what assets are assigned to them with a quick search feature.</p>
					</div>
				</div>
				<div class="item">
					<img src="~/Content/images/assetDetails.png" />
					<div class="carousel-caption">
						<h3>View and Edit Assets</h3>
						<p>Adjust assets and who they are assigned to. Provide additional information.</p>
					</div>
				</div>
				<div class="item">
					<img src="~/Content/images/userReport.png" />
					<div class="carousel-caption">
						<h3>Reports!</h3>
						<p>Quickly generate reports on users, assets or other aggregate data.</p>
					</div>
				</div>
			</div>

			<!-- Controls -->
			<a class="left carousel-control" href="#carousel-images" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#carousel-images" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>

		<br />

		<p>Create, edit, report and managment on just about everything! Anything is possible with XionIT Asset Managment!</p>

	</div>

</div>

@section Styles {
	<style>
		#carousel-images {
			margin:0 auto;
		}
		#carousel-images, #carousel-images .carousel-inner .item img {
			max-width:1000px;
		}
		#carousel-images .carousel-inner .item .carousel-caption {
			background-color:rgba(0,0,0,.5);
		}
	</style>
}